<h1 class="title">Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this book from bing saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local: true do |t| %>
  <div class="with">
    <p>Title</p>
    <%= t.text_field :title %>
  </div>
  <div class="with">
    <P>Body</P>
    <%= t.text_area :body %>
  </div>
  <p><%= t.submit "Update Book" %></p>
<% end %>
<%= link_to "Show", book_path(@book) %>
